{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    },
    "ConnectionStrings": {
      "Default": "Server={DB SERVER}; Database=CoreDB;Trusted_Connection=True;"
    },
    "Authentication": {
      "Facebook": {
        "AppId": "{YOUR FACEBOOK APP ID}",
        "AppSecret": "{YOUR FACEBOOK APP SECRET}"
      },

      "Google": {
        "ClientId": "{YOUR GOOGLE APP CLIENTID}",
        "ClientSecret": "{YOUR GOOGLE APP CLIENTSECRET}"
      },

      "Microsoft": {
        "ClientId": "{YOUR MICROSOFT APP CLIENTID}",
        "ClientSecret": "{YOUR MICROSOFT APP CLIENTSECRET}"
      }
    }
  }
}
